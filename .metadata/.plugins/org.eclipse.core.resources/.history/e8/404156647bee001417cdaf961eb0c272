#ifndef UTILS_SINGLETON_H_
#define UTILS_SINGLETON_H_

namespace NSSmartUtils {

template <typename T>
class CSingleton {
public:
	CSingleton();
	~CSingleton();

public:
	static T& get_inst()
	{
		static T m_t;
	}
};

} /* namespace NSSmartUtils */

#endif /* UTILS_SINGLETON_H_ */
